<Styles xmlns="https://github.com/avaloniaui">
    <Style Selector="Border.toolbar-surface">
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="Background" Value="{DynamicResource Brush.Surface.Toolbar}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Chrome.BorderSoft}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
    </Style>
    <Style Selector="Border.shell-toolbar-surface">
        <Setter Property="Padding" Value="12,10" />
    </Style>

    <Style Selector="TextBlock.toolbar-caption">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="TextBlock.shell-cluster-title">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Muted}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,0,4,0" />
    </Style>

    <Style Selector="Border.status-pill">
        <Setter Property="Background" Value="{DynamicResource Brush.Surface.Raised}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Chrome.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="10,4" />
    </Style>

    <Style Selector="TextBlock.status-text">
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Secondary}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="Border.panel-surface">
        <Setter Property="Padding" Value="12" />
        <Setter Property="Background" Value="{DynamicResource Brush.Surface.Base}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Chrome.Border}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>

    <Style Selector="TextBlock.panel-title">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Primary}" />
    </Style>

    <Style Selector="TextBlock.panel-subtitle">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource Brush.Text.Muted}" />
    </Style>

    <Style Selector="Border.hint-shell">
        <Setter Property="Background" Value="#1B2028" />
        <Setter Property="BorderBrush" Value="{DynamicResource Brush.Chrome.BorderSoft}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="Padding" Value="8" />
    </Style>
</Styles>
