<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="400"
             d:DesignHeight="620"
             x:Class="App.Views.PropertiesPanelView">
    <Border Classes="panel-surface panel-surface-properties">
        <Grid RowDefinitions="Auto,Auto,*" RowSpacing="10">
            <StackPanel Spacing="2">
                <TextBlock Classes="panel-title" Text="Properties" />
                <TextBlock Classes="panel-subtitle" Text="Edit the currently selected node." />
            </StackPanel>

            <Border Grid.Row="1" Classes="hint-shell">
                <StackPanel Spacing="2">
                    <TextBlock Classes="section-label" Text="Selected Node" />
                    <TextBlock x:Name="SelectedNodeText"
                               Classes="hint-text"
                               TextWrapping="Wrap"
                               Text="None" />
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="PropertyEditorHost" Spacing="8" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
