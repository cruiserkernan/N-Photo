<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="1280"
             d:DesignHeight="70"
             x:Class="App.Views.TopToolbarView">
    <Border Classes="toolbar-surface">
        <Grid ColumnDefinitions="Auto,Auto,Auto,*" ColumnSpacing="10">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="ExportButton" Classes="toolbar-button toolbar-button-primary" Content="Export" />
                <Button x:Name="UndoButton" Classes="toolbar-button" Content="Undo" />
                <Button x:Name="RedoButton" Classes="toolbar-button" Content="Redo" />
            </StackPanel>

            <Border Grid.Column="1" Width="1" Margin="2,4" Background="{DynamicResource Brush.Chrome.BorderSoft}" />

            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                <TextBlock Classes="toolbar-caption" Text="Nodes" />
                <StackPanel x:Name="NodeStripHost" Orientation="Horizontal" Spacing="4" />
            </StackPanel>

            <Grid Grid.Column="3" ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <TextBlock VerticalAlignment="Center"
                           Classes="toolbar-caption"
                           Text="N-Photo  |  Node Workspace" />
                <Border Grid.Column="1"
                        Classes="status-pill"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                    <TextBlock x:Name="StatusTextBlock"
                               Classes="status-text"
                               Text="Ready" />
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
