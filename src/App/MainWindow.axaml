<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
        xmlns:views="clr-namespace:App.Views"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="800"
        x:Class="App.MainWindow"
        Title="N-Photo"
        Width="1280"
        Height="800"
        MinWidth="1100"
        MinHeight="700">
    <DockPanel>
        <views:TopToolbarView x:Name="TopToolbar" DockPanel.Dock="Top" />

        <dock:DockControl x:Name="WorkspaceDockControl" />

        <Grid x:Name="PaneSeedGrid" IsVisible="False">
            <views:GraphPanelView x:Name="GraphPanelRoot" />
            <views:ViewerPanelView x:Name="ViewerPanelRoot" />
            <views:PropertiesPanelView x:Name="PropertiesPanelRoot" />
        </Grid>
    </DockPanel>
</Window>
