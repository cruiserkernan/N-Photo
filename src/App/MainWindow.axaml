<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="800"
        x:Class="App.MainWindow"
        Title="N-Photo"
        Width="1280"
        Height="800"
        MinWidth="900"
        MinHeight="600">
    <DockPanel>
        <Border DockPanel.Dock="Top" Padding="8" Background="#F2F2F2">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="LoadButton" Click="OnLoadClicked" Content="Load" />
                <Button x:Name="ExportButton" Click="OnExportClicked" Content="Export" />
                <TextBlock x:Name="StatusTextBlock"
                           VerticalAlignment="Center"
                           Text="Ready" />
            </StackPanel>
        </Border>

        <Grid ColumnDefinitions="3*,1*" Margin="8" ColumnSpacing="8">
            <Grid Grid.Column="0" RowDefinitions="2*,3*" RowSpacing="8">
                <Border Grid.Row="0" BorderBrush="#D0D0D0" BorderThickness="1" Padding="12">
                    <TextBlock x:Name="NodeGraphPlaceholderText" Text="Node Graph Area (placeholder)" />
                </Border>
                <Border Grid.Row="1" BorderBrush="#D0D0D0" BorderThickness="1" Padding="12">
                    <TextBlock x:Name="ViewportPlaceholderText" Text="Viewport Area (placeholder)" />
                </Border>
            </Grid>

            <Border Grid.Column="1" BorderBrush="#D0D0D0" BorderThickness="1" Padding="12">
                <TextBlock x:Name="PropertyPanelPlaceholderText" Text="Property Panel (placeholder)" />
            </Border>
        </Grid>
    </DockPanel>
</Window>
