<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:dock="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
             xmlns:dockFluent="clr-namespace:Dock.Avalonia.Themes.Fluent;assembly=Dock.Avalonia.Themes.Fluent"
             x:Class="App.App"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://App/Styles/Brushes.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme DensityStyle="Compact" />
        <dockFluent:DockFluentTheme />

        <StyleInclude Source="avares://App/Styles/BaseControls.axaml" />
        <StyleInclude Source="avares://App/Styles/ShellPanels.axaml" />
        <StyleInclude Source="avares://App/Styles/GraphAndViewer.axaml" />
    </Application.Styles>
</Application>
